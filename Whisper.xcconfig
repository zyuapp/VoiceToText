// Whisper.cpp integration configuration
// This file is automatically included in both Debug and Release builds
// Using static linking for self-contained binary

SWIFT_OBJC_BRIDGING_HEADER = VoiceToText/VoiceToText-Bridging-Header.h

HEADER_SEARCH_PATHS = $(inherited) $(PROJECT_DIR)/whisper.cpp/include/** $(PROJECT_DIR)/whisper.cpp/ggml/include/**

OTHER_LDFLAGS = $(inherited) $(PROJECT_DIR)/whisper.cpp/build/src/libwhisper.a $(PROJECT_DIR)/whisper.cpp/build/ggml/src/libggml-base.a $(PROJECT_DIR)/whisper.cpp/build/ggml/src/libggml-cpu.a $(PROJECT_DIR)/whisper.cpp/build/ggml/src/ggml-metal/libggml-metal.a $(PROJECT_DIR)/whisper.cpp/build/ggml/src/ggml-blas/libggml-blas.a $(PROJECT_DIR)/whisper.cpp/build/ggml/src/libggml.a -lc++ -framework Accelerate -framework Metal -framework MetalKit -framework Foundation
